{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "SpecialAbilities",
	"description": "Schema for special abilities organized by type",
	"type": "object",
	"patternProperties": {
		".*": {
			"type": "array",
			"description": "Array of special abilities for a given type",
			"items": {
				"type": "object",
				"required": ["name", "abilities"],
				"properties": {
					"name": {
						"type": "string",
						"description": "Name of the special ability item"
					},
					"abilities": {
						"type": "array",
						"description": "Array of ability descriptions",
						"items": {
							"type": "string"
						},
						"minItems": 1
					}
				},
				"additionalProperties": false
			},
			"minItems": 1
		}
	},
	"additionalProperties": false,
	"minProperties": 1
}
