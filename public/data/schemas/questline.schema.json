{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Quests",
	"description": "Schema for quest data organized by quest giver/type",
	"type": "object",
	"patternProperties": {
		".*": {
			"type": "array",
			"description": "Array of quests for a specific quest giver/type",
			"items": {
				"type": "object",
				"required": ["quest", "requirement", "reward"],
				"properties": {
					"quest": {
						"type": "integer",
						"description": "Quest number",
						"minimum": 1
					},
					"requirement": {
						"type": "string",
						"description": "Quest requirement/objective"
					},
					"reward": {
						"type": "string",
						"description": "Quest reward"
					}
				},
				"additionalProperties": false
			},
			"minItems": 1
		}
	},
	"additionalProperties": false,
	"minProperties": 1
}
